/* pages/album/album.wxss */
.album-swiper {
  width: 100%;
  height: 40%;
}
.swiper-item {
  display: flex;
  justify-content: center;
  background: #dedede;
}
.image-slide {
  width: 50%;
  height: 100%;
}
.video-list {
  height: 60%;
}
.scroll-item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  height: 115px;
  padding: 10px;
  background: rgba(255, 255, 255, 0.9);
  border-bottom: 1px solid #dedede;
}
.item-image {
  display: block;
  width: 150px;
  height: 95px;
  border-radius: 5px;
}
.videoInfo {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-between;
  padding: 5px 0 5px 20px;
}
.videoTitle {
  width: 100%;
  line-height: 1.5;
  font-size: 14px;
}
.video-play-cnt {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  font-size: 12px;
}